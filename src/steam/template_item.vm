// *** ${id} ***
// AUTOGENERATED - DON'T EDIT THE OUTPUT PNML FILE
#if ($length > 8)
  #set($length = 8)
#end

item(FEAT_TRAINS, item_steam_${id}) {
  property {
    name: string(str_steam_${id}_name);
    sprite_id: SPRITE_ID_NEW_TRAIN;
    climates_available: ALL_CLIMATES;
    introduction_date: ${date};
    model_life: ${modelLife};
    /* retire_early not set, use default retirement behaviour */
    vehicle_life: ${vehicleLife};
    reliability_decay: 20;

    cost_factor: ${costFactor};
    running_cost_base: RUNNING_COST_STEAM;
    running_cost_factor: ${runningCostFactor};

    speed: ${speed};
    power: ${power};
    weight: ${weight};
    tractive_effort_coefficient: ${tec};
    air_drag_coefficient: 0;
    length: ${length};
    dual_headed: 0;
    extra_power_per_wagon: 0;
    bitmask_vehicle_info: 0;
    misc_flags: 0;

    #trackType( "steam", $gauge )
    engine_class: ENGINE_CLASS_STEAM;

    visual_effect_and_powered: visual_effect_and_powered(VISUAL_EFFECT_STEAM, ${effect}, DISABLE_WAGON_POWER);
  }

  graphics {
    #if ($tenderLength > 0)
    default: switch_steam_${id}_position;
    #else
    default: switch_steam_${id}_animation;
    #end
    #if ($tenderLength > 0)
    articulated_part: switch_steam_${id}_articulated;
    length: switch_steam_${id}_length;
    visual_effect_and_powered: switch_steam_${id}_visual_effect_and_powered;
    #end
    purchase: spriteset_steam_${id}_purchase;

    #if (${info}==0)
    additional_text: return string(str_purchase, string(str_purchase_gauge_${gauge}),string(str_purchase_svc_${service}));
    #end
    #if (${info}==1)
    additional_text: return string(str_purchase_info, string(str_purchase_gauge_${gauge}),string(str_purchase_svc_${service}), string(str_steam_${id}_info));
    #end  
  }
}
