item(FEAT_TRAINS, item_wagon_${id}) {
  property {
    name: string(str_wagon_${id}_name);
    sprite_id: SPRITE_ID_NEW_TRAIN;
    climates_available: ALL_CLIMATES;
    introduction_date: ${date};
    model_life: ${modelLife};
    /* retire_early not set, use default retirement behaviour */
    vehicle_life: ${vehicleLife};
    reliability_decay: 20;

    cost_factor: ${costFactor};
    refit_cost: 0;
    running_cost_factor: 1;

    speed: ${speed};
    power: 0;
    weight: ${weight};
    cargo_capacity: ${capacity};

    #refitableCargoClases($cargoType)
    non_refittable_cargo_classes: 0;
    #cargoAllowRefit($cargoType)
    #cargoDisallowRefit($cargoType)

    tractive_effort_coefficient: 0;
    air_drag_coefficient: 0;
    length: ${length};
    dual_headed: 0;
    extra_power_per_wagon: 0;
    bitmask_vehicle_info: 0;
    ai_special_flag: AI_FLAG_CARGO;

    running_cost_base: RUNNING_COST_DIESEL;
    engine_class: ENGINE_CLASS_DIESEL;
    visual_effect_and_powered: visual_effect_and_powered(VISUAL_EFFECT_DISABLE, 0, DISABLE_WAGON_POWER);

    #wagonTrackType($gauge)

    misc_flags: bitmask(TRAIN_FLAG_AUTOREFIT);
  }

  graphics {
    purchase: spriteset_wagon_${id}_purchase;

    cargo_capacity: return ${capacity};
    default: spriteset_${engine}_${id};
  }
}

