#macro(refitableCargoClases $cargoType)
  #if ("${cargoType}" == "liquid")
    refittable_cargo_classes: bitmask(CC_LIQUID);
    ## TODO otros casos
  #end
#end

#macro(cargoAllowRefit $cargoType)
  #if ("${cargoType}" == "liquid")
    cargo_allow_refit: [OIL_, RUBR, WATR, COLA, PLST, FZDR, BEER, DYES, FISH, MILK, PETR, PLAS, RFPR];
    ## TODO otros casos
  #end
#end

#macro(cargoDisallowRefit $cargoType)
  #if ("${cargoType}" == "liquid")
    cargo_disallow_refit: [PASS, COAL, MAIL, LVST, GOOD, GRAI, WOOD, IORE, STEL, VALU, PAPR, WHEA, FOOD, GOLD, FRUT, MAIZ, CORE, DIAM, SUGR, TOYS, BATT, SWET, TOFF, CTCD, BUBL, AORE, BDMT, BRCK, CERA, CERE, CLAY, CMNT, COPR, ENSP, FERT, FICR, FMSP, FRVG, GLAS, GRVL, LIME, MNSP, OLSD, POTA, RCYC, SAND, SCMT, SGBT, SGCN, SULP, TOUR, VEHI, WDPR, WOOL, JAVA];
    ## TODO otros casos
  #end
#end

