#parse("src/lib_items.vm")

// *** ${id} ***
// AUTOGENERATED - DON'T EDIT THE OUTPUT PNML FILE

#if ($length > 8)
  #set($length = 8)
#end

item(FEAT_TRAINS, item_${engine}_${id}) {
  property {
    name: string(str_${engine}_${id}_name);
    sprite_id: SPRITE_ID_NEW_TRAIN;
    climates_available: ALL_CLIMATES;
    introduction_date: ${date};
    model_life: ${modelLife};
    /* retire_early not set, use default retirement behaviour */
    vehicle_life: ${vehicleLife};
    reliability_decay: 20;

    cost_factor: ${costFactor};
    running_cost_factor: ${runningCostFactor};

    speed: ${speed};
    power: ${power};
    weight: ${weight};
    tractive_effort_coefficient: ${tec};
    air_drag_coefficient: 0;
    length: ${length};
    dual_headed: 0;
    extra_power_per_wagon: 0;
    bitmask_vehicle_info: 0;
    misc_flags: 0;

    #engineType($engine)
    #trackType($engine, $gauge)
    #refitProperty($engine, $liveriesNumber)
}

graphics {
    purchase: switch_${engine}_${id}_livery_year_purchase;
    #extraInfo($engine, $id, $info, $gauge, 0)
    
    #refitGraphics($engine, $liveriesNumber)
  }
}
